{
  "name": "cardshub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "playwright test --config=e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config=e2e/playwright.config.ts --ui",
    "test:e2e:headed": "playwright test --config=e2e/playwright.config.ts --headed",
    "test:e2e:debug": "playwright test --config=e2e/playwright.config.ts --debug",
    "db:init": "npx tsx scripts/init-db.ts",
    "db:reset": "npx tsx scripts/init-db.ts --reset",
    "admin:reset-pw": "npx tsx scripts/reset-password.ts",
    "cf:build": "npx opennextjs-cloudflare build && node scripts/patch-worker.js",
    "cf:deploy": "npx opennextjs-cloudflare deploy",
    "cf:deploy:dev": "npx opennextjs-cloudflare deploy --env dev",
    "cf:dev": "npx opennextjs-cloudflare dev",
    "cf:d1:create": "wrangler d1 create cardshub-db",
    "cf:d1:migrate": "wrangler d1 execute cardshub-db --file=./src/lib/db/schema.sql",
    "cf:d1:migrate:dev": "wrangler d1 execute cardshub-db-dev --env dev --file=./src/lib/db/schema.sql",
    "cf:r2:create": "wrangler r2 bucket create cardshub-uploads"
  },
  "dependencies": {
    "@character-foundry/character-foundry": "^0.1.7",
    "@hookform/resolvers": "^3.10.0",
    "@opennextjs/cloudflare": "^1.0.0",
    "aws4fetch": "^1.0.20",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.4.6",
    "clsx": "^2.1.1",
    "css-tree": "^3.1.0",
    "drizzle-orm": "^0.45.0",
    "fflate": "^0.8.2",
    "gpt-tokenizer": "^3.4.0",
    "isomorphic-dompurify": "^2.34.0",
    "jose": "^6.1.2",
    "nanoid": "^5.1.6",
    "next": "^15.1.9",
    "pngjs": "^7.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.68.0",
    "react-select": "^5.10.2",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "tiktoken": "^1.0.22",
    "winston": "^3.18.3",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251205.0",
    "@eslint/eslintrc": "^3.3.3",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/css-tree": "^2.3.11",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "15.1.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.14",
    "wrangler": "^4.53.0"
  }
}
